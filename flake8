# #
# Copy to ~/.flake8 under Windows and to ~/.config/flake8 on *nix
# #

[flake8]
ignore =
    # E501 = line too long (82 > 79 characters)
    E501

max-line-length = 160
max-complexity = 10

exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # Exclude tests
    tests/*
